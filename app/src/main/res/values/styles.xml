<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">@color/colorAccent</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#00ffc8</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
</resources>